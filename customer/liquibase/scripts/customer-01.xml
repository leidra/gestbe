<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
    <changeSet id="create-customer-table" author="Leidra">
        <createTable tableName="customer">
            <column name="id" type="TEXT">
                <constraints primaryKey="true" primaryKeyName="pk_customer" nullable="false" />
            </column>
            <column name="name" type="TEXT">
            </column>
            <column name="createdOn" type="TIMESTAMP WITH TIME ZONE" defaultValue="NOW()"/>
            <column name="updatedOn" type="TIMESTAMP WITH TIME ZONE" defaultValue="NOW()"/>
        </createTable>
    </changeSet>
</databaseChangeLog>